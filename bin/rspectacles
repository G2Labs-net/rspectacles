#!/usr/bin/env ruby

begin
  require 'rspectacles/app.rb'
rescue LoadError => e
  require 'rubygems'
  path = File.expand_path '../../lib', __FILE__
  $:.unshift(path) if File.directory?(path) && !$:.include?(path)
  require 'rspectacles/app.rb'
end

Thin::Server.start RSpectacles::App, '0.0.0.0', RSpectacles.config.sinatra_port
